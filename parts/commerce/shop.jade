template(name='product_card')
    .ui.card(class=shop_card_class)
        a.image.log_view(href="/product/#{_id}/view")
            img.ui.image(src="{{c.url image width=600 height=600 crop='lpad'}}")

        //- +image_view key='image' direct=true classes='zoom'
        .content
            a.ui.header.log_view(href="/product/#{_id}/view") #{title} 
                if variable_price
                    |~
                if available
                    i.green.checkmark.icon
                else 
                    i.cancel.grey.icon
            if hourly_rate
                .ui.tiny.statistic
                    .value $#{hourly_rate}
                    .label /hr
            if daily_rate
                .ui.tiny.statistic
                    .value $#{daily_rate}
                    .label /day
