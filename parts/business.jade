template(name='business')
    .ui.card
        if picture
            img.ui.image(src="{{c.url picture width=400 height=400}}")
        else
            img.ui.image(src="{{c.url image width=400 height=400 gravity='face' crop='fill'}}")
        .content
            a.ui.header(href="/business/#{_id}") #{title}
            div created {{from_now _timestamp}}
            div available {{from_now date}}
            +edit_button
            +view_button
            |available servings: #{available_servings}

            if servings_available
                .ui.button.business_sign_up
                    |sign up


template(name='business_widget')
    .ui.segment
        a.ui.header(href='/businesss')
            i.glass.cheers.icon
            |businesssharing
        .ui.header upcoming businesss
        .ui.list
            each businesss
                .item
                    |#{title}
                    each ingredients
                        .ui.basic.label #{this}
        .ui.button become a cook




template(name='business_card_template')
    .ui.stackable.grid.segment
        .four.wide.column
            //- img.ui.fluid.image(src="{{c.url image }}")
            img.ui.fluid.rounded.image(src="{{c.url image width=400 height=600 crop='fit'}}")
        .twelve.wide.column
            .ui.header #{title}
            .ui.inline.small.header ingredients
            each ingredients
                .ui.basic.label #{this}
            .ui.inline.small.header tags
            each tags
                .ui.basic.label #{this}
            .ui.inline.small.header location_tags
            each location_tags
                .ui.basic.label #{this}
            .ui.header available {{from_now date}} at #{time_available}
            .ui.header servings available #{servings_available}
            a.ui.large.basic.icon.button(href="/business/#{_id}/edit")
                i.pencil.icon
            a.ui.large.basic.icon.button(href="/business/#{_id}/view")
                i.right.chevron.icon        
            //- +edit_button
            //- +view_button

template(name='business_reviews')
    .ui.segment
        .ui.header 
            +i name='popular-topic'
            |reviews
        if can_leave_review
            .ui.basic.button.leave_review leave review
        else
            .ui.basic.button.edit_review leave review
        each reviews
            .ui.header #{text}
            each tags
                .ui.basic.tag #{this}
            .ui.header vote #{vote}



template(name='business_view')
    a.ui.basic.button(href="/m/business")
        |businesses
    with current_doc
        .ui.stackable.padded.grid
            .five.wide.column
                .ui.header #{title}
                +array_view key='tags' direct=true
                +html_view key='description' direct=true
                +image_view key='image_id' direct=true
                +array_view key='location_tags' direct=true
            .six.wide.column
                +comments
                .ui.header
                    +icolor name='work'
                    | internships
                if is_employee
                    .ui.button
                        |add internship
                each business_internships
                    .ui.segment(href="/m/internship/#{_id}/view")
                        .ui.header #{title}
            .five.wide.column
                a.ui.large.basic.button(href="/m/business/#{_id}/edit")
                    i.pencil.icon
                    |edit
                .ui.header 
                    +icolor name='briefcase'
                    |employees
                .ui.header 
                    +icolor name='filled-flag'
                    |fans
                if is_fan
                    .ui.icon.compact.button.remove_fan(title='leave fans')
                        i.remove.icon
                else 
                    .ui.icon.button.become_fan(title='become fan')
                        i.plus.icon
                .ui.selection.list
                    each business_fans
                        a.item(href="/user/#{username}") #{username}
                    
                //- 
                //- with _author_id
                //-     +user_card
                //- with current_doc
                //-     +voting_full



template(name='business_edit')
    with current_doc
        .ui.stackable.padded.grid
            .four.wide.column
                .ui.header editing business
                .ui.header #{title}
                .ui.header 
                    +icolor name='shield'
                    |employees
                each employees
                    a.ui.button(href="/user/#{username}") #{username}
                .ui.header 
                    +icolor name='work'
                    |internships
                .ui.basic.button.add_internship
                    i.plus.icon
                    |internship
                .ui.selection.list
                    each internships
                        a.item(href="/m/internship/#{_id}") #{title}
            .eight.wide.column
                +textarea_edit key='description' direct=true
            .four.wide.column
                a.ui.large.fluid.button(href="/m/business/#{_id}/view")
                    i.checkmark.green.icon   
                    |save     
